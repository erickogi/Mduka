<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent">

    <LinearLayout
        android:layout_width="match_parent"

        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:padding="@dimen/welcome_title_padding"
            android:text="Welcome to Mobisell"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="@dimen/welcome_title_size"
            android:textStyle="bold"
            android:typeface="monospace" />

        <!--<TextView-->
        <!--android:padding="@dimen/welcome_title_padding"-->
        <!--android:layout_gravity="center"-->
        <!--android:textAlignment="center"-->
        <!--android:text="@string/lorem_ipsum"-->
        <!--android:textSize="16sp"-->
        <!--android:textStyle="normal"-->
        <!--android:textColor="@android:color/white"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content" />-->
    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"

        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="4dp"
            android:layout_marginStart="4dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_border_colorlbtn"
            android:gravity="center"
            android:onClick="newAccountBtnPressed"
            android:padding="4dp"
            android:text="New Account"
            android:textColor="@android:color/black" />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="4dp"
            android:layout_marginStart="4dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_border_colorlbtn"
            android:gravity="center"
            android:onClick="newloginBtnPressed"
            android:padding="4dp"
            android:text="Login"
            android:textColor="@android:color/black" />

    </LinearLayout>
</RelativeLayout>